{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/",
        "dist/"
    ],
    "watch": [
        "src/"
    ],
    "execMap": {
        "ts": "node --inspect -r ts-node/register"
    },
    "stdin": false,
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}